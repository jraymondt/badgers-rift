---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import LikeButton from '../components/LikeButton.astro';

type Props = CollectionEntry<'blog'>['data'] & {
  title: string;
  description: string;
  slug: string;
  heroImage?: string;
};

const { title, description, pubDate, updatedDate, heroImage, slug } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} heroImage={heroImage} />
        <style>
            main {
                width: calc(100% - 2em);
                max-width: 100%;
                margin: 0;
            }
            .hero-image {
                width: 100%;
            }
            .hero-image img {
                display: block;
                margin: 0 auto;
                border: 3px solid var(--cga-light-blue);
                box-shadow: var(--box-shadow);
            }
            .prose {
                width: 720px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 1em;
                color: var(--cga-white);
            }
            .title {
                margin-bottom: 1em;
                padding: 1em 0;
                text-align: center;
                line-height: 1;
                border-bottom: 4px solid var(--cga-light-blue);
            }
            .title h1 {
                margin: 0 0 0.5em 0;
                color: var(--cga-light-cyan);
            }
            .date {
                margin-bottom: 0.5em;
                color: var(--cga-light-gray);
                font-size: 0.9em;
            }
            .last-updated-on {
                font-style: italic;
                font-size: 0.85em;
                color: var(--cga-light-gray);
            }
            hr {
                border: none;
                border-top: 2px solid var(--cga-light-blue);
                margin: 0;
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article class="cga-scanlines">
                <div class="hero-image">
                    {heroImage && <img width={1020} height={510} src={heroImage} alt={title} />}
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <FormattedDate date={pubDate} />
                            {
                                updatedDate && (
                                    <div class="last-updated-on">
                                        Last updated on <FormattedDate date={updatedDate} />
                                    </div>
                                )
                            }
                        </div>
                        <h1>{title}</h1>
                        <hr />
                    </div>
                    <slot />
                    <LikeButton postSlug={slug} />
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>