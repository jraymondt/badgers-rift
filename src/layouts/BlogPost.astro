---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import LikeButton from '../components/LikeButton.astro';

type Props = CollectionEntry<'blog'>['data'] & {
  title: string;
  description: string;
  slug: string;
  heroImage?: string;
  nextPost?: CollectionEntry<'blog'> | null;
  prevPost?: CollectionEntry<'blog'> | null;
};

const { title, description, pubDate, updatedDate, heroImage, slug, nextPost, prevPost } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} heroImage={heroImage} pubDate={pubDate} />
        <style>
            main {
                width: calc(100% - 2em);
                max-width: 100%;
                margin: 0;
            }
            .hero-image {
                width: 100%;
            }
            .hero-image img {
                display: block;
                margin: 0 auto;
                border: 3px solid var(--cga-light-blue);
                box-shadow: var(--box-shadow);
            }
            .prose {
                width: 720px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 1em;
                color: var(--cga-white);
            }
            .title {
                margin-bottom: 1em;
                padding: 1em 0;
                text-align: center;
                line-height: 1;
                border-bottom: 4px solid var(--cga-light-blue);
            }
            .title h1 {
                margin: 0 0 0.5em 0;
                color: var(--cga-light-cyan);
            }
            .date {
                margin-bottom: 0.5em;
                color: var(--cga-light-gray);
                font-size: 0.9em;
            }
            .last-updated-on {
                font-style: italic;
                font-size: 0.85em;
                color: var(--cga-light-gray);
            }
            hr {
                border: none;
                border-top: 2px solid var(--cga-light-blue);
                margin: 0;
            }
            .post-navigation {
                display: flex;
                justify-content: space-between;
                margin-top: 2em;
                padding-top: 1em;
                border-top: 2px solid var(--cga-light-blue);
                gap: 1em;
            }
            .nav-link {
                flex: 1;
                text-decoration: none;
                padding: 1em;
                border: 2px solid var(--cga-light-blue);
                background-color: rgba(157, 191, 229, 0.05);
                transition: all 0.2s ease;
                display: flex;
                flex-direction: column;
            }
            .nav-link:hover {
                background-color: var(--cga-light-blue);
                color: var(--cga-navy);
            }
            .nav-link:hover .nav-label,
            .nav-link:hover .nav-title {
                color: var(--cga-navy);
            }
            .nav-label {
                font-size: 0.8em;
                text-transform: uppercase;
                color: var(--cga-light-gray);
                margin-bottom: 0.5em;
            }
            .nav-title {
                font-weight: bold;
                color: var(--cga-light-cyan);
            }
            .nav-link.next {
                text-align: right;
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article class="cga-scanlines">
                <div class="hero-image">
                    {heroImage && <img width={1020} height={510} src={heroImage} alt={title} />}
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <FormattedDate date={pubDate} />
                            {
                                updatedDate && (
                                    <div class="last-updated-on">
                                        Last updated on <FormattedDate date={updatedDate} />
                                    </div>
                                )
                            }
                        </div>
                        <h1>{title}</h1>
                        <hr />
                    </div>
                    <slot />
                    <LikeButton postSlug={slug} />
                    
                    <div class="post-navigation">
                        {prevPost ? (
                            <a href={`/blog/${prevPost.id.replace(/\.mdx?$/, '')}/`} class="nav-link prev">
                                <span class="nav-label">← Previous Post</span>
                                <span class="nav-title">{prevPost.data.title}</span>
                            </a>
                        ) : (
                            <div /> 
                        )}
                        
                        {nextPost && (
                            <a href={`/blog/${nextPost.id.replace(/\.mdx?$/, '')}/`} class="nav-link next">
                                <span class="nav-label">Next Post →</span>
                                <span class="nav-title">{nextPost.data.title}</span>
                            </a>
                        )}
                    </div>
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>