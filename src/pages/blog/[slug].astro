---
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  const posts = blogEntries.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  
  return await Promise.all(
    posts.map(async (entry, index) => {
      const slug = entry.id.replace(/\.[^/.]+$/, ''); // Remove extension
      const { Content } = await render(entry);
      
      return {
        params: { slug },
        props: { 
          entry, 
          Content,
          nextPost: index > 0 ? posts[index - 1] : null,
          prevPost: index < posts.length - 1 ? posts[index + 1] : null,
        },
      };
    })
  );
}

type Props = {
  entry: CollectionEntry<'blog'>;
  Content: any;
  nextPost: CollectionEntry<'blog'> | null;
  prevPost: CollectionEntry<'blog'> | null;
};

const { entry, Content, nextPost, prevPost } = Astro.props;
const { slug } = Astro.params;
---

<BlogPost
  title={entry.data.title}
  description={entry.data.description}
  pubDate={entry.data.pubDate}
  updatedDate={entry.data.updatedDate}
  heroImage={entry.data.heroImage}
  slug={slug}
  nextPost={nextPost}
  prevPost={prevPost}
>
  <Content />
</BlogPost>
                